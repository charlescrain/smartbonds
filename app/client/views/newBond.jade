//- extend layout
//- block content
div(ng-controller="NewBondCtrl")
	div(ng-show="submitted")
		span Please Enter Your Secret Key
		span Key
		input(type="text" ng-model="key")
		button(type="submit" ng-click="submitFinal()") Submit
	h3 Create a New Bond:
	form(name="register")
		span Address
		input(type="text" ng-model="bond.owner")
		span parValue
		input(type="text" ng-model="bond.parValue")
		span interest
		input(type="text" ng-model="bond.interest")
		span secondsToMaturity
		input(type="text" ng-model="bond.secondsToMaturity")
		span frequency
		input(type="text" ng-model="bond.frequency")
		button(type="submit" ng-click="submit()") Submit